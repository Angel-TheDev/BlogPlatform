@model BlogPlatform.Model.TagPosts
@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<h2>
    <p>@Model.post.Title</p>
</h2>
<hr />
<p>@Model.post.Author</p>
<p>@Model.post.Date</p>
<hr />
<p>@Model.post.Body</p>
<hr />
<a href="~/post/delete/@Model.PostId">Delete</a>
<p>Tags:</p>
<p>@Model.tag</p>
